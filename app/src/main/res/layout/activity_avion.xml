<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/avion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".avion">
        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:layout_above="@id/nav"
        android:background="@color/light_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_bg_bottom_corner"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="368dp"
                android:layout_height="148dp"
                android:background="@drawable/blue_bg_bottom_corner"
                android:padding="16dp">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="58dp"
                    android:layout_marginEnd="45dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:text="Let's explore the world with us !"
                    android:textColor="#FBFBFB"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="352dp"
                    android:layout_height="132dp"
                    app:srcCompat="@drawable/world" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    app:srcCompat="@drawable/us" />

                <TextView
                    android:id="@+id/loginid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="41dp"
                    android:layout_toEndOf="@+id/imageView5"
                    android:text="Full Naame" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/roundbackground"
                android:orientation="vertical"
                android:padding="17dp">

                <!-- From -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundbackground"
                    android:text="FROM"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundbackground"

                    android:backgroundTint="@color/light_grey"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="52dp"
                        android:layout_height="43dp"
                        app:srcCompat="@drawable/from_ic" />

                    <Spinner
                        android:id="@+id/mySpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp" />


                </LinearLayout>

                <!-- To -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="TO"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundbackground"

                    android:backgroundTint="@color/light_grey"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="43dp"
                        android:src="@drawable/to_ic" />

                    <Spinner
                        android:id="@+id/mySpinner2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp" />

                </LinearLayout>

                <!-- Passengers -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundbackground"
                        android:backgroundTint="@color/light_grey"
                        android:gravity="center_horizontal"
                        android:padding="12dp">


                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="27dp"
                            android:layout_marginEnd="230dp"
                            android:src="@drawable/passenger_ic" />

                        <Button
                            android:id="@+id/minuadult"
                            android:layout_width="71dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11dp"
                            android:layout_marginEnd="75dp"
                            android:layout_toStartOf="@+id/plusAdult"
                            android:backgroundTint="@color/light_grey"
                            android:text="-"
                            android:textColor="@color/white"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/adultCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/plusAdult"
                            android:layout_width="71dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="610dp"
                            android:backgroundTint="@color/light_grey"
                            android:text="+"
                            android:textColorLink="#FFFFFF"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/adult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/imageView"
                            android:layout_marginBottom="-29dp"
                            android:paddingBottom="2dp"
                            android:text="ADULT"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="26dp"
                            android:layout_height="51dp"

                            android:layout_alignParentTop="true"
                            android:layout_marginTop="27dp"
                            android:layout_marginEnd="18dp"
                            android:layout_toStartOf="@+id/plusAdult"
                            android:hint="0"
                            android:textSize="20dp" />

                    </RelativeLayout>

                    <Space
                        android:layout_width="16dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundbackground"
                        android:backgroundTint="@color/light_grey"
                        android:gravity="center_horizontal"
                        android:padding="12dp">


                        <ImageView
                            android:id="@+id/imageViewW"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="27dp"
                            android:layout_marginEnd="230dp"
                            android:src="@drawable/passenger_ic" />

                        <Button
                            android:id="@+id/minuChild"
                            android:layout_width="71dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11dp"
                            android:layout_marginEnd="75dp"
                            android:layout_toStartOf="@+id/plusCHILD"
                            android:backgroundTint="@color/light_grey"
                            android:text="-"
                            android:textColor="@color/white"
                            android:textSize="34sp" />


                        <Button
                            android:id="@+id/plusCHILD"
                            android:layout_width="71dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="610dp"
                            android:backgroundTint="@color/light_grey"
                            android:text="+"
                            android:textColorLink="#FFFFFF"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/imageViewW"
                            android:layout_marginBottom="-29dp"
                            android:paddingBottom="2dp"
                            android:text="CHILDREN"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/textView55"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="32dp"
                            android:layout_marginEnd="28dp"
                            android:layout_toStartOf="@+id/plusCHILD"
                            android:hint="0"
                            android:textSize="20dp" />

                    </RelativeLayout>

                    <Space
                        android:layout_width="16dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <!-- Dates -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundbackground"
                        android:backgroundTint="@color/light_grey"
                        android:gravity="center_vertical"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/hoverImage"
                            android:layout_width="37dp"
                            android:layout_height="37dp"
                            android:src="@drawable/calendar_ic" />

                        <TextView
                            android:id="@+id/datedep"
                            android:layout_width="98dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="" />

                    </LinearLayout>

                    <Space
                        android:layout_width="16dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Class Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundbackground"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/light_grey"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="45dp"
                        android:layout_height="35dp"
                        app:srcCompat="@drawable/seat" />

                    <Spinner
                        android:id="@+id/seat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp" />


                </LinearLayout>

                <!-- Search Button -->
                <Button
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="#2195F1"
                    android:text="Search Flights"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navbar"/>
</RelativeLayout>